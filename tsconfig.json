{
  "compilerOptions": {
    "target": "esnext",                                  
    "lib": ["dom", "esnext"],                                       
    "jsx": "react",                                
    "module": "esnext",                                
    "moduleResolution": "node",                       
    "baseUrl": "src",                                  
    "paths": {
      "@pages": ["pages"],
      "@layouts": ["layouts"],
      "@components/*": ["components/*"],
      "@theme": ["theme"],
      "@utils": ["utils"],
      "@hooks": ["hooks"],
      "@assets": ["assets"],
      "@animations": ["animations"]                        
    },                                     
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true                                
  },
  "include": ["./src/**/*", "./gatsby-node.ts", "./gatsby-config.ts", "./plugins/**/*"]
}
